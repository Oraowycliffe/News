{{#partial "content"}}
    <h1></h1><br><br><br>
    <form action="/News" method="post" class="col-md-6">
        <h4> Enter Department News </h4><br>
        <label for="name">Enter content</label>
        <textarea type="text" id="content" name="content" class="form-control" required ></textarea>


        <div class="form-group">
            <label for="location">Add department Id</label>
            <input type="number" id="departmentId" name="departmentId" class="form-control" required>
        </div>


        <button type="submit" class="btn btn-primary"> Submit </button>
    </form>
{{/partial}}

